<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Hibernate.Entity.Person_has_Friend" table = "Person_has_Friend">

        <meta attribute = "class-description">
            This class contains the linking table details.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "person_id" column = "Person_id" type = "int"/>
        <property name = "friend_id" column = "Friend_id" type = "int"/>


    </class>
</hibernate-mapping>