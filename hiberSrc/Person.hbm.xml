<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Hibernate.Entity.Person" table = "Person">

        <meta attribute = "class-description">
            This class contains the peronal details.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "firstName" column = "firstName" type = "string"/>
        <property name = "lastName" column = "lastName" type = "string"/>
        <property name = "adress" column = "adress" type = "string"/>
        <property name = "Account_id" column = "Account_id" type = "int"/>
        <property name = "phone" column = "phone" type = "int"/>
        <property name = "pres" column = "pres" type = "string"/>

    </class>
</hibernate-mapping>